<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:background="@null">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@null">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:id="@+id/imageButton9"
                android:background="#ff3b30"
                android:src="@mipmap/title"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"></LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@null">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="#5ac8fa">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null">

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton10"
                    android:onClick="onTailorExcuse"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@mipmap/tedit"
                    android:layout_gravity="bottom" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton11"
                    android:onClick="onMainRegisterClick"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@mipmap/user"
                    android:layout_gravity="bottom" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton12"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@mipmap/abouts"
                    android:onClick="onAboutClick"
                    android:layout_gravity="bottom" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:background="#5ac8fa"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="TAILOR"
                android:id="@+id/textView3"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PROFILE"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:onClick="onMainRegisterClick"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="#FFFFFF"

                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ABOUT"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:background="@null" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="#007aff" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" >

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton5"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@mipmap/generate"
                    android:layout_gravity="bottom"
                    android:onClick="randomExcuseIntent"/>
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton22"
                    android:background="@null"
                    android:layout_weight="1"
                    android:src="@mipmap/don"
                    android:layout_gravity="bottom"
                    android:onClick="randomExcuseIntent"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#007aff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1.98">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="GENERATE"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="#FFFFFF" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="DONATE"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal|bottom"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#007aff"
        android:gravity="center_vertical|center_horizontal" >

    </LinearLayout>


</LinearLayout>
