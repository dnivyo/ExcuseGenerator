<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nz.aut.dms.excusegenerator.ExcuseOutputActivity"
    android:background="#fd6469">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:id="@+id/btnShare"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/outPutText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="shareIt"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.46"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:src="@mipmap/first" />

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/imageView2"
            android:layout_gravity="right|bottom"
            android:src="@mipmap/last" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outPutText"
            android:layout_below="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:textSize="50sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center" />

    </FrameLayout>

</RelativeLayout>
