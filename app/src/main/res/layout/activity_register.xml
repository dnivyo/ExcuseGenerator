<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nz.aut.dms.excusegenerator.RegisterActivity"
    android:background="#5ac8fa">


    //I've just added some input-stuff to make the code without tons of error messages... :)
    //Just remove my stuff and do your thing when you get here David.
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="What is your name?"
        android:fontFamily="sans-serif-light"
        android:textSize="21dp"
        android:ems="10"
        android:textColorHint="#FFFFFF"
        android:id="@+id/usernameRegister"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="21dp"
        android:textColorHint="#FFFFFF"
        android:hint="How old are you?"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:id="@+id/ageRegister"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sex"
        android:id="@+id/sexRegister"
        android:fontFamily="sans-serif-light"
        android:checked="false"
        android:textOff="Male"
        android:textOn="Female"
        android:layout_marginTop="74dp"
        android:textSize="21dp"
        android:layout_below="@+id/ageRegister"
        android:background="#007aff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:fontFamily="sans-serif-light"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:onClick="onRegisterButtonClick"
        android:textSize="21dp"
        android:background="#FF3b30"
        android:textColor="#FFFFFF" />


</RelativeLayout>
